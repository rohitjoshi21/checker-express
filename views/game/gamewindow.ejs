<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Checkers Game</title>
        <script src="/gamebundled.js"></script>
        <style>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            }

            body {
                min-height: 100vh;
                background: linear-gradient(135deg, #1a2a6c 0%, #2a4858 100%);
                padding: 20px;
                display: flex;
                justify-content: center;
                align-items: center;
            }

            .game-container {
                background: rgba(255, 255, 255, 0.95);
                padding: 30px;
                border-radius: 20px;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
                max-width: 1200px;
                width: 95%;
            }

            h1 {
                text-align: center;
                color: #1a2a6c;
                margin-bottom: 30px;
                font-size: 2.5rem;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
            }

            /* New diagonal layout styles */
            .game-layout {
                display: grid;
                grid-template-columns: 1fr auto 1fr;
                grid-template-rows: auto auto;
                gap: 20px;
                align-items: center;
                margin-bottom: 20px;
                position: relative;
            }

            .opponent-area {
                grid-column: 1;
                grid-row: 1;
                justify-self: start;
            }

            .player-area {
                grid-column: 3;
                grid-row: 2;
                justify-self: end;
            }

            .board-area {
                grid-column: 2;
                grid-row: 1 / span 2;
                justify-self: center;
            }

            .player-info {
                width: 280px;
            }

            .player-card {
                background: #f8f9fa;
                padding: 20px;
                border-radius: 15px;
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
                transition: all 0.3s ease;
                border: 3px solid transparent;
            }

            .player-card.active {
                background: #ffffff;
                border-color: #28a745;
                transform: translateY(-5px);
                box-shadow: 0 8px 20px rgba(40, 167, 69, 0.2);
            }

            .player-card.inactive {
                opacity: 0.7;
                filter: grayscale(30%);
            }

            /* Label styles */
            .player-label {
                position: absolute;
                padding: 5px 10px;
                background: #1a2a6c;
                color: white;
                border-radius: 4px;
                font-size: 0.9rem;
                font-weight: 500;
            }

            .opponent-label {
                top: -10px;
                left: 20px;
            }

            .your-label {
                bottom: -10px;
                right: 20px;
            }

            .player-info-group {
                margin-bottom: 15px;
            }

            .player-name {
                font-size: 1.5rem;
                font-weight: bold;
                color: #2a4858;
                margin-bottom: 10px;
            }

            .piece-color {
                display: flex;
                align-items: center;
                gap: 10px;
                font-size: 1.1rem;
                color: #555;
            }

            .color-indicator {
                width: 30px;
                height: 30px;
                border-radius: 50%;
                border: 2px solid #ddd;
            }

            .red-piece {
                background: #dc3545;
                box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.2);
            }

            .blue-piece {
                background: #007bff;
                box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.2);
            }

            .turn-indicator {
                padding: 10px 15px;
                border-radius: 8px;
                text-align: center;
                font-weight: 500;
                margin-top: 15px;
                background: #28a745;
                color: white;
                display: none;
            }

            .player-card.active .turn-indicator {
                display: block;
                animation: gentle-pulse 2s infinite;
            }

            .resign-button {
                width: 100%;
                padding: 12px;
                background: #dc3545;
                color: white;
                border: none;
                border-radius: 8px;
                font-size: 1rem;
                font-weight: 600;
                cursor: pointer;
                transition: background 0.3s ease;
                margin: 15px 0;
            }

            .resign-button:hover {
                background: #c82333;
            }

            canvas {
                background: #fff;
                border-radius: 10px;
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            }

            .game-status {
                text-align: center;
                font-size: 1.2rem;
                color: #2a4858;
                padding: 15px;
                background: #e9ecef;
                border-radius: 8px;
                margin-top: 20px;
                font-weight: 500;
            }

            @keyframes gentle-pulse {
                0% {
                    transform: scale(1);
                }
                50% {
                    transform: scale(1.01);
                }
                100% {
                    transform: scale(1);
                }
            }

            @media (max-width: 1200px) {
                .game-layout {
                    grid-template-columns: 1fr;
                    grid-template-rows: auto auto auto;
                }

                .opponent-area {
                    grid-column: 1;
                    grid-row: 1;
                    justify-self: center;
                }

                .board-area {
                    grid-column: 1;
                    grid-row: 2;
                }

                .player-area {
                    grid-column: 1;
                    grid-row: 3;
                    justify-self: center;
                }

                .player-info {
                    width: 100%;
                    max-width: 300px;
                }

                canvas {
                    width: 100%;
                    max-width: 600px;
                    height: auto;
                }

                .player-label {
                    position: static;
                    display: inline-block;
                    margin-bottom: 10px;
                }
            }

            @media (max-width: 480px) {
                h1 {
                    font-size: 2rem;
                }

                .game-container {
                    padding: 15px;
                }

                .player-card {
                    padding: 15px;
                }
            }
        </style>
    </head>
    <body>
        <div class="game-container">
            <h1>Checkers Game</h1>
            <div class="game-layout">
                <span class="player-label opponent-label">Opponent</span>
                <div class="opponent-area">
                    <div class="player-info">
                        <div id="player2Card" class="player-card">
                            <div class="player-info-group">
                                <div id="player2name" class="player-name">Player 2</div>
                                <div class="piece-color">
                                    <span>Pieces:</span>
                                    <div id="player2color" class="color-indicator blue-piece"></div>
                                </div>
                            </div>
                            <div class="turn-indicator">Current Turn</div>
                        </div>
                    </div>
                </div>

                <div class="board-area">
                    <canvas id="myCanvas"></canvas>
                </div>

                <span class="player-label your-label">You</span>
                <div class="player-area">
                    <div class="player-info">
                        <div id="player1Card" class="player-card">
                            <div class="player-info-group">
                                <div id="player1name" class="player-name">Player 1</div>
                                <div class="piece-color">
                                    <span>Pieces:</span>
                                    <div id="player1color" class="color-indicator red-piece"></div>
                                </div>
                            </div>
                            <button id="resign" class="resign-button">Resign</button>
                            <div class="turn-indicator">Current Turn</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="game-status" id="gameStatus">Game in Progress</div>
        </div>
    </body>
</html>
